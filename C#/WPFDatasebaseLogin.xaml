<Window x:Class="DatabaseLoginWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="Usernamelbl" Content="" HorizontalAlignment="Left" Margin="182,108,0,0" VerticalAlignment="Top" Width="183" Height="40" Foreground="#FFFF0007"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="182,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="182,153,0,0" VerticalAlignment="Top" Width="183"/>
        <Label x:Name="Passwordlbl" Content="" HorizontalAlignment="Left" Margin="182,184,0,0" VerticalAlignment="Top" Width="201" Foreground="#FFFF0007"/>
