        <Label Content="Username" HorizontalAlignment="Left" Margin="78,80,0,0" VerticalAlignment="Top" Width="99"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="78,154,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="78,217,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.395,1.054" Height="30" Click="clear_Click"/>

    </Grid>
</Window>
